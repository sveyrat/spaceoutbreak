<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.sveyrat.spaceoutbreak">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/spacecraftbiohazard"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".NewGameInputPlayerActivity"
            android:label="@string/new_game_player_input.name"></activity>


        <activity android:name=".NewGameSettingsActivity"
            android:label="@string/new_game_settings.name"></activity>

        <activity android:name=".NightBasisActivity"
            android:label="@string/night_basis.name"></activity>

        <activity android:name=".VoteActivity"
            android:label="@string/vote_activity.name"></activity>

        <activity android:name=".GameEndActivity"
            android:label="@string/game_end_activity.activity_title"></activity>


        <activity android:name=".CaptainElectionActivity"
            android:label="@string/captain_election_activity.activity_title"></activity><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>