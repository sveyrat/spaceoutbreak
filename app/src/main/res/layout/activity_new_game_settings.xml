<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <LinearLayout
        android:id="@+id/role_choice_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:alpha="0.9"
        android:background="@drawable/general_border"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="1sp"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:text="@string/new_game_settings.role_choice_box"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3sp"
                android:layout_marginLeft="6sp"
                android:layout_weight="1"
                android:text="@string/role_psychologist.name" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3sp"
                android:src="@mipmap/psychologist" />

            <CheckBox
                android:id="@+id/checkBox_psychologist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3sp"
                android:layout_marginLeft="6sp"
                android:layout_weight="1"
                android:text="@string/role_computer_scientist.name" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3sp"
                android:src="@mipmap/computer_scientist" />

            <CheckBox
                android:id="@+id/checkBox_computer_scientist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3sp"
                android:layout_marginLeft="6sp"
                android:layout_weight="1"
                android:text="@string/role_geneticist.name" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3sp"
                android:src="@mipmap/geneticist" />

            <CheckBox
                android:id="@+id/checkBox_geneticist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3sp"
                android:layout_marginLeft="6sp"
                android:layout_weight="1"
                android:text="@string/role_spy.name" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3sp"
                android:src="@mipmap/spy" />

            <CheckBox
                android:id="@+id/checkBox_spy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3sp"
                android:layout_marginLeft="6sp"
                android:layout_weight="1"
                android:text="@string/role_hacker.name" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3sp"
                android:src="@mipmap/hacker" />

            <CheckBox
                android:id="@+id/checkBox_hacker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3sp"
                android:layout_marginLeft="6sp"
                android:layout_weight="1"
                android:text="@string/role_fanatic.name" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3sp"
                android:src="@mipmap/fanatic" />

            <CheckBox
                android:id="@+id/checkBox_fanatic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/various_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/role_choice_box"
        android:layout_marginTop="10dp"
        android:alpha="0.9"
        android:background="@drawable/general_border"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="1sp"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:text="@string/new_game_settings.various_box"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3sp"
                android:layout_marginLeft="6sp"
                android:layout_weight="1"
                android:text="@string/new_game_settings.is_genotype" />

            />

            <CheckBox
                android:id="@+id/checkBox_genotype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3sp"
                android:layout_marginLeft="6sp"
                android:layout_weight="1"
                android:text="@string/new_game_settings.randomize_game" />

            />

            <CheckBox
                android:id="@+id/checkBox_randomize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />


        </LinearLayout>

    </LinearLayout>


    <Button
        style="@style/buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/activity_button_margin"
        android:background="@drawable/button"
        android:onClick="validateGameSettings"
        android:text="@string/common.validate" />


</RelativeLayout>